{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "fvtt-types": [
                "node_modules/fvtt-types/src/index.d.mts"
            ]
        },
        "types": [
            "fvtt-types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ]
}